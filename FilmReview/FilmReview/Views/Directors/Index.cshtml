@model IEnumerable<FilmReview.Models.Director>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Film.FilmName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectorFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectorLastName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                <a href="~/Films/Title/@item.FilmId">
                    <b>@Html.DisplayFor(modelItem => item.Film.FilmName)</b>
                </a>   
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorLastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.DirectorID }) |
                @Html.ActionLink("Details", "Details", new { id=item.DirectorID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.DirectorID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
