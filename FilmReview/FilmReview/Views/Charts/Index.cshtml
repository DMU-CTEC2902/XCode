@model IEnumerable<FilmReview.Models.Film>
@{
    ViewBag.Title = "Charts";
}

<h2>Charts</h2>
<br />
<h3>Most Popular</h3>
<table id="chart">
    <tr>
        <th>@Html.DisplayNameFor(model => model.FilmName)</th>
        <th>@Html.DisplayNameFor(model => model.Genre.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Rating)</th>
    </tr>
    @foreach (var item in Model.Take(5))
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FilmName)</td>
            <td>@Html.DisplayFor(modelItem => item.Genre.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Rating)</td>
        </tr>
    }
</table>
<br />
<h3>Least Popular</h3>
<table id="chart">
    <tr>
        <th>@Html.DisplayNameFor(model => model.FilmName)</th>
        <th>@Html.DisplayNameFor(model => model.Genre.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Rating)</th>
    </tr>
    @foreach (var item in (List<FilmReview.Models.Film>)ViewData["LeastPopular"])
        //
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FilmName)</td>
            <td>@Html.DisplayFor(modelItem => item.Genre.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Rating)</td>
        </tr>
    }
</table>
<br />
<h3>Most Reviewed</h3>
<table id="chart">
    <tr>
        <th width="70%">@Html.DisplayNameFor(model => model.FilmName)</th>
        <th>Reviewed</th>
    </tr>
    @foreach (var item in ViewData["MostReviewed"] as Dictionary<string, int>)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Key)</td>
            <td>@Html.DisplayFor(modelItem => item.Value) times</td>
        </tr>
    }
</table>
<br />